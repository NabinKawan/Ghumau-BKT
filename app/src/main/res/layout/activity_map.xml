<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Map">

    <com.mapbox.mapboxsdk.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapview"
        app:mapbox_cameraTargetLat="27.6710"
        app:mapbox_cameraTargetLng="85.4298"
        app:mapbox_cameraZoom="11"></com.mapbox.mapboxsdk.maps.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btm"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home1"
                android:layout_weight="1"
                android:scaleType="center"
                android:onClick="onClick"
                android:src="@drawable/home"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fav"
                android:scaleType="center"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/fav"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chat"
                android:onClick="onClick"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/chat"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/map"
                android:layout_weight="1"
                android:tint="@color/colorPrimaryDark"
                android:id="@+id/mapp"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/menu"
                android:onClick="onClick"
                android:scaleType="center"
                android:id="@+id/menu"></ImageView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>