<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/scrollView1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/rimg">
                <com.github.ybq.android.spinkit.SpinKitView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:SpinKit_Color="@color/colorPrimaryDark" />

                <com.synnapps.carouselview.CarouselView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"
                    android:id="@+id/carousel"/>
            </RelativeLayout>
            <AutoCompleteTextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Search your destination"
                android:textSize="13dp"
                android:gravity="fill"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="8dp"
                android:completionThreshold="1"
                android:dropDownAnchor="@id/text_view"
                android:fontFamily="@font/arial"
                android:layout_below="@+id/rimg"
                android:background="@drawable/edit_border"
                ></AutoCompleteTextView>
            <TextView
                android:id="@+id/text_view"
                android:layout_below="@+id/rimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingBottom="16dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/popular"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/search"
                android:layout_height="40dp"
                android:text="Popular places"
                android:textSize="13dp"
                android:gravity="fill"
                android:fontFamily="@font/arial"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/fav"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_border"
                ></TextView>
            <TextView
                android:id="@+id/map"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Maps"
                android:gravity="fill"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/arial"
                android:drawableLeft="@drawable/map"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_border"
                android:layout_below="@+id/popular"
                ></TextView>
            <TextView
                android:id="@+id/event"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="fill"
                android:fontFamily="@font/arial"
                android:text="Events and festivals"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/event"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_border"
                android:layout_below="@+id/map"
                ></TextView>
            <RelativeLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event">
                <com.github.ybq.android.spinkit.SpinKitView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressbar"
                    android:visibility="gone"
                    style="@style/SpinKitView.Circle"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:SpinKit_Color="@color/colorPrimaryDark" />
                <GridView
                    android:id="@+id/gridview"
                    android:numColumns="2"
                    android:padding="2dp"
                    android:verticalSpacing="3dp"
                    android:horizontalSpacing="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"></GridView>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btm"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home1"
                android:layout_weight="1"
                android:scaleType="center"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/home"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fav"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/fav"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chat"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/chat"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/map"
                android:layout_weight="1"
                android:id="@+id/mapp"></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/menu"
                android:scaleType="center"
                android:id="@+id/menu"></ImageView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
